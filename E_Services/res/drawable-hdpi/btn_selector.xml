<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
     <item android:state_pressed="true" >
         <shape android:shape="rectangle"  >
             <corners android:radius="3dip" />
             <stroke android:width="1dip" android:color="#0C490F" />
             <gradient  android:angle="-90"  android:startColor="#0C490F" android:endColor="#0C490F"  />            
         </shape>
     </item>
    <item android:state_focused="true">
         <shape android:shape="rectangle"  >
             <corners android:radius="3dip" />
             <stroke android:width="1dip" android:color="#0F5F13" />
             <solid  android:color="#0F5F13"/>       
         </shape>
     </item>  
    <item >
        <shape android:shape="rectangle"  >
             <corners android:radius="3dip" />
             <stroke android:width="1dip" android:color="#0F5F13" />
             <gradient  android:angle="-90"  android:startColor="#0F5F13" android:endColor="#0F5F13" />            
         </shape>
     </item>
</selector>